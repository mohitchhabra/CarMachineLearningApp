<?xml version="1.0" encoding="utf-8" ?>
<common:ContentPageBase
    x:Class="CustomVisionCompanion.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:CustomVisionCompanion.Common"
    xmlns:local="clr-namespace:CustomVisionCompanion"
    Title="Medialesson Porsche App"
    BindingContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding TakePhotoCommand}"
            Order="Primary"
            Priority="0"
            Text="Take photo">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android">ic_action_photo_camera.png</On>
                    <On Platform="iOS">Images/photo_camera.png</On>
                    <On Platform="UWP">Assets/AppBar/TakePhoto.png</On>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem
            Command="{Binding PickPhotoCommand}"
            Order="Primary"
            Priority="1"
            Text="Pick photo">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="Android">ic_action_photo_library.png</On>
                    <On Platform="iOS">Images/photo_library.png</On>
                    <On Platform="UWP">Assets/AppBar/PickPhoto.png</On>
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
        <ToolbarItem
            Command="{Binding SettingsCommand}"
            Order="Secondary"
            Priority="0"
            Text="Settings..." />
    </ContentPage.ToolbarItems>

    <Grid Style="{StaticResource MasterGridStyle}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Grid.Column="0" Margin="5,10,5,5">
            <!--<StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                <Label
                    Style="{StaticResource SwitchLabelStyle}"
                    Text="Online"
                    VerticalOptions="Center" />
                <Switch IsToggled="{Binding IsOffline, Mode=TwoWay}" />
                <Label
                    Style="{StaticResource SwitchLabelStyle}"
                    Text="Offline"
                    VerticalOptions="Center" />
            </StackLayout>-->
            <Image
                Margin="12"
                Aspect="AspectFit"
                Source="{Binding ImagePath}"
                VerticalOptions="Start" />
        </StackLayout>

        <ListView
            Grid.Column="1"
            Grid.Row="0"
            CachingStrategy="RecycleElementAndDataTemplate"
            ItemsSource="{Binding Predictions}"
            SelectionMode="None"
            HasUnevenRows="true">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label
                            FontSize="Medium"
                            Text="{Binding .}"
                            VerticalOptions="Center" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="UWP">12,15,12,12</On>
                    <On Platform="Android, iOS">0,10,12,12</On>
                </OnPlatform>
            </ListView.Margin>
        </ListView>
        
        <!--<ListView
            Grid.Column="1"
            Grid.Row="1"
            CachingStrategy="RecycleElementAndDataTemplate"
            ItemsSource="{Binding CarPredictions}"
            HasUnevenRows="True"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label
                            FontSize="Medium"
                            Text="{Binding .}"
                            VerticalOptions="Center" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.Margin>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="UWP">12,12,12,12</On>
                    <On Platform="Android, iOS">0,10,12,12</On>
                </OnPlatform>
            </ListView.Margin>
        </ListView>-->

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="5dp">
            <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="245dp"
        android:layout_gravity="center_horizontal">
                <TextView
            android:text="Power: "
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="{Binding Car.Power}"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="Accelaration: "
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            <TextView
            android:text="{Binding Car.Accelaration}"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="RPM: "
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="{Binding Car.Rpm}"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="Top Speed: "
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
                <TextView
            android:text="{Binding Car.TopSpeed}"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ActivityIndicator
            Grid.ColumnSpan="2"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}" />
    </Grid>
</common:ContentPageBase>
